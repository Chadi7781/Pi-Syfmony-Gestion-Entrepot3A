{%  extends 'backend/base.html.twig' %}




{% block subtitle %}
<h4 class="page-title">Ajouter un Employé</h4>
{% endblock %}


    {% block content %}

        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">






                    {{ form_start(form, {'attr': {'id': 'myform'}}) }}
                    {{ form_errors(form) }}


                    <div class="row">
                        <div class="form-group col col-md-6">
                            <label>CIN</label>
                            {{ form_widget(form.CIN, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Adresse</label>
                            {{ form_widget(form.ADRESSE, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Nom</label>
                            {{ form_widget(form.USERNAME, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Email</label>
                            {{ form_widget(form.EMAIL, {'attr': {'class': 'form-control' }}) }}

                        </div>
                        <div class="form-group col col-md-6">
                            <label>Prénom</label>
                            {{ form_widget(form.PRENOM, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                                <label>DateNaissance</label>
                            {{ form_widget(form.DATENAISSANCE, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Telephone</label>
                            {{ form_widget(form.Telephone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Mission</label>
                            {{ form_widget(form.MISSION, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-12 text-center">
                            <button class="btn btn-success" style="float: center">Ajouter</button>
                        </div>





                    </div>

                    {{ form_end(form) }}

                    <!-- end row -->









                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer text-right">
                2016 - 2018 © Adminto. Coderthemes.com
            </footer>

        </div>
