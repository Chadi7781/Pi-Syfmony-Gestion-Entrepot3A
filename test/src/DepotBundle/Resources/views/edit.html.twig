{%  extends 'backend/base.html.twig' %}
{% block subtitle %}
    <a href="index.html" class="waves-effect"><i class="mdi mdi-view-dashboard"></i> <span> Liste des Depots </span> </a>

{% endblock %}
{% block titre %}
    <h4 class="page-title">Editer un Depot</h4>
{% endblock %}


    {% block content %}

        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">
                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}


                    <div class="row">
                        <div class="form-group col col-md-6">
                            <label>Adresse</label>
                            {{ form_widget(edit_form.adresse, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Surface</label>
                            {{ form_widget(edit_form.surface, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-6">
                            <label>Prix</label>
                            {{ form_widget(edit_form.prix, {'attr': {'class': 'form-control' }}) }}

                        </div>
                        <div class="form-group col col-md-6">
                            <label>Etat</label>
                            {{ form_widget(edit_form.etat, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col col-md-12 text-center">
                            <button class="btn btn-success" style="float: center">Modifier</button>
                        </div>





                    </div>

                    {{ form_end(edit_form) }}

                    <!-- end row -->









                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer text-right">
                2016 - 2018 Â© Adminto. Coderthemes.com
            </footer>

        </div>
    {% endblock %}

