{% block body %}

    <button class="btn btn-success" data-toggle="modal" data-target="#add_new_record_modal">Ajouter Categorie</button>
    <div class="modal fade" id="add_new_record_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        {{ form_start(form) }}
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Ajouter Cat√©gorie</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label for="first_name">Nom</label>
                        {{ form_widget(form.nom,{'attr':{'class':'form-control'}} ) }}

                    </div>

                    <div class="form-group">
                        <label for="last_name">Prenom</label>
                        {{ form_widget(form.file,{'attr':{'class':'form-control'}} ) }}
                    </div>



                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    {{ form_row(form.Valider,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
