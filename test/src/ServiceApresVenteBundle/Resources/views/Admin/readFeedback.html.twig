                                    <!-- item-->
                                    <a href="" class="dropdown-item">Traiter</a>
                                    <!-- item-->

                                </div>
                            </div>
                            <div>
                                <img src="{{ asset('assets/images/feedbacks/user.png') }}" class="rounded-circle thumb-xl img-thumbnail m-b-10" alt="profile-image">


                                <p class="text-muted font-13"><strong>Note :</strong>

