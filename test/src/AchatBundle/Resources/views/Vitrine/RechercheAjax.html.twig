                                '<div class="product-info-cust prt_name">'+
                                '<span class="item_price">Prix: '+v.prix+'</span>'+
                                // '<span class="item_price">Auteur: '+v.idUser.username+'</span>'+
                                '<div class="clearfix">'+ '</div>'+
                                '</div>'+
                                '</div>'+
                                '</div>'
                            );
                            if ($("#prixx").val()==''){

                                $("#init").show();
                                $("#result").empty();

                            }

                        })


                    }



                });

            });


        });




    </script>
