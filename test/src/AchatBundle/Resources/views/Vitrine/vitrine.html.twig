        }

        .snip1519 .button {
            text-decoration: none;
            color: #777;
            border: 1px solid rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            padding: 5px 10px;
            display: inline-block;
            position: relative;
            z-index: 1;
        }

        .snip1519 .button:before {
            background-color: #6253e1;
            position: absolute;
            top: 100%;
            bottom: 0;
            left: 0;
            right: 0;
            content: '';
            z-index: -1;
            opacity: 0;
        }

        .snip1519 .button:hover {
            color: #fff;
        }

        .snip1519 .button:hover:before {
            top: 0;
            opacity: 1;
        }


