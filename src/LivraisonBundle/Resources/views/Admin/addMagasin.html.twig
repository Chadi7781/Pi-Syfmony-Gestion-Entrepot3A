{%  extends 'backend/base.html.twig' %}


{% block subtitle %}
    <h4 class="page-title"> Point De Collecte</h4>
{% endblock %}


    {% block content %}

        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">

                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-20">
                                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                                            <div class="form-group row">
                                                    {{ form_label(form.nom, ' Nom Du Point De Collecte :',{'attr': {'class': 'col-2 col-form-label'}}) }}
                                                    <div class="col-10" style="color:Red;">
                                                     {{ form_widget(form.nom, {'attr': {class:'form-control' ,placeholder:'Nom Du Point De Collecte'}}) }}
                                                        {{ form_errors(form.nom,{'attr': {class:'form-control'}}) }}
                                                    </div>
                                            </div>
                                            <div class="form-group row">
                                                {{ form_label(form.pays, ' Governat Point de Collecte:',{'attr': {'class': 'col-2 col-form-label'}}) }}
                                                <div class="col-10" style="color:Red;">
                                                    {{ form_widget(form.pays, {'attr': {class:'form-control' ,placeholder:'Govrnat '}}) }}
                                                    {{ form_errors(form.pays,{'attr': {class:'form-control'}}) }}

                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                {{ form_label(form.horaireTravail, ' Horaiiire Point de Collecte:',{'attr': {'class': 'col-2 col-form-label'}}) }}
                                                <div class="col-10" style="color:Red;">
                                                    {{ form_widget(form.horaireTravail, {'attr': {class:'form-control' ,placeholder:'Horaire Du Travail '}}) }}
                                                    {{ form_errors(form.horaireTravail,{'attr': {class:'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                {{ form_label(form.log, ' longitude Point de Collecte:',{'attr': {'class': 'col-2 col-form-label'}}) }}
                                                <div class="col-10" style="color:Red;">
                                                    {{ form_widget(form.log, {'attr': {class:'form-control' ,placeholder:'longitude '}}) }}
                                                    {{ form_errors(form.log,{'attr': {class:'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                {{ form_label(form.lat, ' lattitude Point de Collecte:',{'attr': {'class': 'col-2 col-form-label'}}) }}
                                                <div class="col-10" style="color:Red;">
                                                    {{ form_widget(form.lat, {'attr': {class:'form-control' ,placeholder:'lattitude '}}) }}
                                                    {{ form_errors(form.lat,{'attr': {class:'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group col col-md-12 text-center">

                                                {{ form_widget(form.valider, {'attr': {class:'btn btn-success' }}) }}
                                            </div>
                                            {{ form_end(form) }}


                    </div>






                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer text-right">
                2016 - 2018 Â© Adminto. Coderthemes.com
            </footer>

        </div>

    {% endblock %}
