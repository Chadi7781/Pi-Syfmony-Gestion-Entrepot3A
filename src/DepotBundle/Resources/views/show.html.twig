{% extends 'base.html.twig' %}

{% block body %}
    <h1>Depot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ depot.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ depot.adresse }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ depot.surface }}</td>
            </tr>
            <tr>
                <th>Idproduit</th>
                <td>{{ depot.idproduit }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ depot.prix }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ depot.etat }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if depot.datedebut %}{{ depot.datedebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if depot.datefin %}{{ depot.datefin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('depot_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
